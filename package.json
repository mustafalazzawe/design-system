{
  "devDependencies": {
    "css-declaration-sorter": "^7.2.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "format-css": "postcss styles/*.css --replace && prettier --write styles/*.css",
    "format-css-file": "postcss ${FILE} --replace && prettier --write ${FILE}",
    "format-css-all": "postcss **/*.css --replace && prettier --write **/*.css"
  }
}